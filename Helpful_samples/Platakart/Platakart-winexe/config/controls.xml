<?xml version="1.0" encoding="utf-8" ?>
<inputmap>

  <!-- example
  <input eventname="player1-up">
    <keyboard>
      <key enum="K_a" />
    </keyboard>

    <joystick number="0">
      <axis number="0" direction="positive" />
      <ball number="0" direction="negative_y" />
      <hat  number="0" direction="positive_y" />
      <button number="0" />
    </joystick>
  </input>
  -->

  <input eventname="player1-up">
    <keyboard>
      <key enum="K_UP" />
    </keyboard>
    <joystick number="0">
      <axis number="1" direction="negative" />
    </joystick>
  </input>

  <input eventname="player1-down">
    <keyboard>
      <key enum="K_DOWN" />
    </keyboard>
    <joystick number="0">
      <axis number="1" direction="positive" />
    </joystick>
  </input>

  <input eventname="player1-left">
    <keyboard>
      <key enum="K_LEFT" />
    </keyboard>
    <joystick number="0">
      <axis number="0" direction="negative" />
    </joystick>
  </input>

  <input eventname="player1-right">
    <keyboard>
      <key enum="K_RIGHT" />
    </keyboard>
    <joystick number="0">
      <axis number="0" direction="positive" />
    </joystick>
  </input>

  <input eventname="player1-button0">
    <keyboard>
      <key enum="K_RETURN" />
    </keyboard>
    <joystick number="0">
      <button number="0" />
    </joystick>
  </input>

  <input eventname="player1-button1">
    <keyboard>
      <key enum="K_ESCAPE" />
    </keyboard>
    <joystick number="0">
      <button number="1" />
    </joystick>
  </input>
</inputmap>